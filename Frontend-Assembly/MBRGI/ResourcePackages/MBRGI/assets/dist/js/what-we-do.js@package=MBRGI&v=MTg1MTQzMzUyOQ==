$(document).ready(function(){var e=$("html").attr("lang"),t=checkIfMobile(),s=0,n=1,a=6e3,c=!0,l=!1,o="en"!==e;function d(){screen_width=Math.min($(window).width(),1920);var t=screen_width-$(".timeline").position().left;o&&(t=screen_width-parseInt($(".timeline").css("right")));var n=t/s;i=0,$(".timeline .line").each(function(){if(i++,point=$(".point[index|="+i+"]"),o?point.css({right:(i-1)*n}):point.css({left:(i-1)*n}),line=$(".line[index|="+i+"]"),o)if(992<=screen_width){var e=parseInt(point.css("right"));line.css({right:e+10,width:n-10})}else line.css({right:0,width:t-50});else 992<=screen_width?line.css({left:point.position().left+10,width:n-10}):line.css({left:0,width:t-50})})}function r(e){for(n=e,$(".inner").stop(),$(".inner").css({width:0}),$(".point").removeClass("active"),$(".point").removeClass("current"),$(".point .title").css({opacity:0}),i=1;i<n;i++)line=$(".line[index|="+i+"]"),inner=$(".inner",line),point=$(".point[index|="+i+"]"),inner.css({width:"100%"}),point.addClass("active");$(".point[index|="+n+"]").addClass("current"),l||m()}function m(){if(c){var i=$(".timeview .slide[index|="+n+"]");$(".timeview .slide .image .inner_image").css({opacity:"0"}),$(".timeview .slide .text").css({opacity:"0"}),$(".timeview .slide").hide(),i.show(),function(){var i=$(".timeview .slide[index|="+n+"]"),e=$(".image",i);$(".inner_image",e);i.addClass("active")}(),point=$(".point[index|="+n+"]"),line=$(".line[index|="+n+"]"),inner=$(".inner",line),point.addClass("active"),$(".title",point).animate({opacity:1}),setTimeout(function(){$(".title",point).animate({opacity:0})},a/2),$(".line").css({"z-index":1}),line.css({"z-index":2}),inner.animate({width:"100%"},a,"linear",function(){!function(){l=!1,s<++n&&(n=1);r(n)}()})}}function p(){$(".inner_image",".timeview").each(function(){t&&1<=$(this).attr("data-image-mobile").length?$(this).css("background-image","url("+$(this).attr("data-image-mobile")+")"):$(this).css("background-image","url("+$(this).attr("data-image-desktop")+")")})}t&&p(),$(".timeview .slide").each(function(){var i=$(".text-container-title",$(this)).html();s++,$(".timeview .timeline").append('<div class="point" index="'+s+'"><div class="title">'+i+"</div></div>"),$(".timeview .timeline").append('<div class="line" index="'+s+'"><div class="inner"></div></div>'),$(this).attr({index:s}),$(this).css({"z-index":parseInt(9-s)})}),$(".timeview .timeline .point").click(function(){l=!1,index=$(this).attr("index"),r(index)}),d(),r(1),$(".timeline-pause").click(function(){l=!(c=!1),$(".timeline-play").toggleClass("active",c),$(".timeline-pause").toggleClass("active",!c);var i=$(".timeview .slide[index|="+n+"]");i.removeClass("active"),$(".image .inner_image",i).css({opacity:"1"}),$(".text",i).css({opacity:"1"}),r(n)}),$(".timeline-play").click(function(){c=!0,$(".timeline-play").toggleClass("active",c),$(".timeline-pause").toggleClass("active",!c);var i=$(".timeview .slide[index|="+n+"]");$(".image .inner_image",i).css({opacity:"1"}),$(".text",i).css({opacity:"1"}),m()}),$(window).resize(function(){d(),t!=checkIfMobile()&&(t=!t,p())})});